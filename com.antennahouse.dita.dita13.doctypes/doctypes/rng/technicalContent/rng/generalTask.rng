    <moduleMetadata>
      <moduleType>topicshell</moduleType>
      <moduleShortName>General Task</moduleShortName>
      <shellPublicIds>
        <dtdShell>-//ANTENNA HOUSE//DTD DITA<var presep=" " name="ditaver"/> General Task//EN</dtdShell>
        <rncShell>urn:x-antennahouse:dita:rnc:generalTask.rnc<var presep=":" name="ditaver"/></rncShell>
        <rngShell>urn:x-antennahouse:dita:rng:generalTask.rng<var presep=":" name="ditaver"/></rngShell>
        <xsdShell>urn:x-antennahouse:dita:xsd:generalTask.xsd<var presep=":" name="ditaver"/></xsdShell>
      </shellPublicIds>
    </moduleMetadata>
