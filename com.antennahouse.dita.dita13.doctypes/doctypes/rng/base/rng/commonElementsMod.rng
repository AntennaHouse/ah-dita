    <div>
        <a:documentation>COMMON ATTRIBUTE SETS OVERRIDES</a:documentation>
        <include href="urn:oasis:names:tc:dita:rng:commonElementsMod.rng">
            <div>
                <a:documentation>Add style attributes</a:documentation>
                <define name="univ-atts">
                    <ref name="id-atts"/>
                    <ref name="select-atts"/>
                    <ref name="localization-atts"/>
                    <ref name="style-atts"/>
                </define>
                <define name="univ-atts-translate-no">
                    <ref name="id-atts"/>
                    <ref name="select-atts"/>
                    <ref name="localization-atts-translate-no"/>
                    <ref name="style-atts"/>
                </define>
                <define name="title.attributes">
                    <ref name="id-atts"/>
                    <ref name="localization-atts"/>
                    <optional>
                        <attribute name="base"/>
                    </optional>
                    <ref name="base-attribute-extensions"/>
                    <optional>
                        <attribute name="outputclass"/>
                    </optional>
                    <optional>
                        <attribute name="rev" dita:since="1.3"/>
                    </optional>
                    <ref name="style-atts"/>
                </define>
                <define name="dita.entry.attributes">
                    <ref name="id-atts"/>
                    <ref name="localization-atts"/>
                    <!-- rotate      (0|1|-dita-use-conref-target) -->
                    <optional>
                        <attribute name="rotate" dita:since="1.3">
                            <ref name="yesorno"/>
                        </attribute>
                    </optional>
                    <optional>
                        <attribute name="rev"/>
                    </optional>
                    <optional>
                        <attribute name="outputclass"/>
                    </optional>
                    <optional>
                        <attribute name="scope" dita:since="1.3">
                            <choice>
                                <value>row</value>
                                <value>col</value>
                                <value>rowgroup</value>
                                <value>colgroup</value>
                                <value>-dita-use-conref-target</value>
                            </choice>
                        </attribute>
                    </optional>
                    <optional>
                        <attribute name="headers" dita:since="1.3">
                            <data type="NMTOKENS"/>
                        </attribute>
                    </optional>
                    <ref name="style-atts"/>
                </define>
            </div>
            <div>
                <a:documentation>Add @float to fig,figgroup</a:documentation>
                <define name="fig.attributes">
                    <ref name="display-atts"/>
                    <optional>
                        <attribute name="spectitle"/>
                    </optional>
                    <ref name="univ-atts"/>
                    <optional>
                        <attribute name="outputclass"/>
                    </optional>
                    <ref name="fig-float-atts"/>
                </define>
                <define name="figgroup.attributes">
                    <ref name="univ-atts"/>
                    <optional>
                        <attribute name="outputclass"/>
                    </optional>
                    <ref name="fig-float-atts"/>
                </define>
            </div>
            <div>
                <a:documentation>Add desc to figgroup</a:documentation>
                <define name="figgroup.content">
                    <optional>
                        <ref name="title"/>
                    </optional>
                    <optional>
                        <ref name="desc"/>
                    </optional>
                    <zeroOrMore>
                        <choice>
                            <ref name="figgroup"/>
                            <ref name="figgroup.cnt"/>
                        </choice>
                    </zeroOrMore>
                </define>
            </div>
        </include>
    </div>
    <div>
        <a:documentation>Style attribute definition</a:documentation>
        <define name="style-atts">
            <optional>
                <attribute name="prop" ns="http://www.w3.org/1999/XSL/Format"/>
            </optional>
            <optional>
                <attribute name="prop" ns="http://www.w3.org/TR/CSS2"/>
            </optional>
        </define>
    </div>
    <div>
        <a:documentation>Fig float attribute definition</a:documentation>
        <define name="fig-float-atts">
            <optional>
                <attribute name="float">
                    <choice>
                        <value>none</value>
                        <value>left</value>
                        <value>right</value>
                    </choice>
                </attribute>
            </optional>
        </define>
    </div>
</grammar>
